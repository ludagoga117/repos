<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
	>
		<TextView
			style="@style/stextView.Titulo"/>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/stextView"
				android:text="@string/name"/>
			<EditText
				android:id="@+id/etNombre"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:hint="@string/hname"
				android:textSize="30dp"
				android:inputType="text"
				android:layout_weight="1"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/stextView"
				android:text="@string/Telefono"/>
			<EditText
				android:id="@+id/etTelefono"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:hint="@string/hTelefono"
				android:textSize="30dp"
				android:inputType="phone"
				android:layout_weight="1"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/stextView"
				android:text="@string/Email"/>
			<EditText
				android:id="@+id/etCorreo"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:hint="@string/hEmail"
				android:textSize="30dp"
				android:inputType="textEmailAddress"
				android:layout_weight="1"
				/>
		</LinearLayout>

		<TextView
			style="@style/stextView"
			android:text="@string/Sexo"/>

		<RadioGroup 
			android:id="@+id/rgOps"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
				<RadioButton 
					android:id="@+id/rFemenino"
					style="@style/stextView"
					android:text="@string/Femenino"
					android:checked="true"
					android:onClick="onRadioButtonClicked"
				/>
				<RadioButton 
					android:id="@+id/rMasculino"
					style="@style/stextView"
					android:text="@string/Masculino"
					android:onClick="onRadioButtonClicked"
				/>
		</RadioGroup>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/stextView"
				android:text="@string/fecha"/>
			<EditText
				android:id="@+id/etFecha"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:hint="@string/hfecha"
				android:textSize="30dp"
				android:inputType="date"
				android:enabled="false"
				android:layout_weight="1"
				/>
			<Button 
				style="@style/stextView"
				android:text="@string/Elegir" 
				android:onClick="showDatePickerDialog"/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/stextView"
				android:text="@string/Ciudad"/>
			<Spinner
				android:id="@+id/spCiudades"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
		
		<TextView
			style="@style/stextView"
			android:text="@string/hobbies"/>
		
		<CheckBox android:id="@+id/cb_rascar"
			style="@style/stextView"
			android:text="@string/h1"
			android:onClick="onCheckboxClicked"/>
		<CheckBox android:id="@+id/cb_tv"
			style="@style/stextView"
			android:text="@string/h2"
			android:onClick="onCheckboxClicked"/>
		<CheckBox android:id="@+id/cb_leer"
			style="@style/stextView"
			android:text="@string/h3"
			android:onClick="onCheckboxClicked"/>
		<CheckBox android:id="@+id/cb_pelicula"
			style="@style/stextView"
			android:text="@string/h4"
			android:onClick="onCheckboxClicked"/>
		
		<Button
			android:id="@+id/bSalvar"
			style="@style/stextView"
			android:text="@string/save"
			android:onClick="onButtonSalvarClicked"
		/>
////////////////////
		<TextView
			android:id="@+id/tvNombre"
			style="@style/stextView"
			android:text="@string/name"/>
		
		<TextView
		    android:id="@+id/tvTelefono"
			style="@style/stextView"
			android:text="@string/Telefono"/>
		
		<TextView
		    android:id="@+id/tvEmail"
			style="@style/stextView"
			android:text="@string/Email"/>
		
		<TextView
		    android:id="@+id/tvSexo"
			style="@style/stextView"
			android:text="@string/Sexo"/>
		
		<TextView
		    android:id="@+id/tvEdad"
			style="@style/stextView"
			android:text="@string/age"/>
		
		<TextView
		    android:id="@+id/tvCiudad"
			style="@style/stextView"
			android:text="@string/Ciudad"/>
		
		<TextView
		    android:id="@+id/tvHobbies"
			style="@style/stextView"
			android:text="@string/hobbies"/>
	</LinearLayout>
</ScrollView>
