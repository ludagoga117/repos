<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
	</style>	
	<style name="stextView" parent = "@android:style/TextAppearance.Medium">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">30dp</item>
		<item name="android:typeface">serif</item>
	</style>
	<style name="stextView.Titulo">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/salmon</item>
		<item name="android:textSize">40dp</item>
		<item name="android:textStyle">italic</item>
	</style>
	<style name="stextView.et">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textStyle">italic</item>
		<item name="android:inputType">numberDecimal</item>
	</style>
	<style name="stextView.fit">
		<item name="android:layout_width">0dp</item>
	</style>
	<style name="stextView.et.fit">
		<item name="android:layout_width">0dp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="stextView.et.fit.text">
		<item name="android:inputType">text</item>
	</style>
	<style name="stextView.et.fit.phone">
		<item name="android:inputType">phone</item>
	</style>
	<style name="stextView.et.fit.email">
		<item name="android:inputType">textEmailAddress</item>
	</style>
	<style name="stextView.et.fit.fecha">
		<item name="android:inputType">date</item>
	</style>
</resources>