<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Calculo de nota final"
		android:textStyle="italic"
		android:textSize="40dp"/>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Quices (15%):"
			android:textSize="30dp"/>
		<EditText
			android:id="@+id/etQuices"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="0.0"
			android:textSize="30dp"
			android:inputType="numberDecimal"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Exposiciones (10%):"
			android:textSize="30dp"/>
		<EditText
			android:id="@+id/etExpo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="0.0"
			android:textSize="30dp"
			android:inputType="numberDecimal"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Laboratorio (40%):"
			android:textSize="30dp"/>
		<EditText
			android:id="@+id/etLab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="0.0"
			android:textSize="30dp"
			android:inputType="numberDecimal"/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Proyecto Final (35%):"
			android:textSize="30dp"/>
		<EditText
			android:id="@+id/etProyecto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="0.0"
			android:textSize="30dp"
			android:inputType="numberDecimal"/>
	</LinearLayout>
	
	<Button
		android:id="@+id/bCalcular"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Calcular definitiva"
		android:textSize="30dp"
		/>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Definitiva (100%):"
			android:textSize="30dp"/>
		<EditText
			android:id="@+id/etDefinitiva"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="0.0"
			android:textSize="30dp"
			android:inputType="numberDecimal"/>
	</LinearLayout>
</LinearLayout>
